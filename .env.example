# STL Shelf Environment Variables
# Copy this file to .env and fill in the values

# =============================================================================
# DATABASE
# =============================================================================
DATABASE_URL=postgresql://user:password@localhost:5432/stl_shelf
# POSTGRES_MAX_CONNECTIONS=20
# POSTGRES_IDLE_TIMEOUT=30
# POSTGRES_CONNECTION_TIMEOUT=5

# =============================================================================
# STORAGE (S3-compatible: MinIO, Cloudflare R2, AWS S3)
# =============================================================================
STORAGE_ENDPOINT=http://localhost:9000
STORAGE_ACCESS_KEY=your-access-key
STORAGE_SECRET_KEY=your-secret-key
# STORAGE_BUCKET_NAME=stl-models
# STORAGE_REGION=auto
# STORAGE_USE_SSL=true

# =============================================================================
# AUTHENTICATION
# =============================================================================
AUTH_URL=http://localhost:3000
WEB_URL=http://localhost:3000
BETTER_AUTH_SECRET=your-secret-key-minimum-32-characters-long
# AUTH_COOKIE_DOMAIN=

# OAuth Providers (optional)
# GITHUB_CLIENT_ID=
# GITHUB_CLIENT_SECRET=
# GOOGLE_CLIENT_ID=
# GOOGLE_CLIENT_SECRET=

# =============================================================================
# CAPTCHA (Cloudflare Turnstile)
# =============================================================================
# Get keys at: https://dash.cloudflare.com/turnstile
TURNSTILE_SECRET_KEY=your-turnstile-secret-key
# TURNSTILE_SITE_KEY=

# =============================================================================
# EMAIL (Resend)
# =============================================================================
# Get API key at: https://resend.com
RESEND_API_KEY=re_your_api_key
# EMAIL_FROM=STL Shelf <noreply@yourdomain.com>
# EMAIL_LOGO_URL=https://yourdomain.com/logo.png

# =============================================================================
# SERVER
# =============================================================================
# NODE_ENV=development
# PORT=3000

# =============================================================================
# BILLING (Polar.sh) - Optional for self-hosted
# =============================================================================
# Get credentials at: https://polar.sh
# POLAR_ACCESS_TOKEN=polar_placeholder
# POLAR_WEBHOOK_SECRET=whsec_placeholder
# POLAR_SERVER=sandbox
# POLAR_PRODUCT_FREE=
# POLAR_PRODUCT_BASIC=
# POLAR_PRODUCT_PRO=

# =============================================================================
# ANALYTICS & MONITORING (Optional)
# =============================================================================
# Statsig - https://statsig.com
STATSIG_SERVER_SECRET=secret-your-statsig-key
# VITE_STATSIG_CLIENT_KEY=client-your-statsig-key

# Better Stack Logging - https://betterstack.com
# BETTERSTACK_SOURCE_TOKEN=
# BETTERSTACK_INGESTING_HOST=

# Sentry Error Tracking - https://sentry.io
# SENTRY_DSN=
